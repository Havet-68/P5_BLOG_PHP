
{% extends "base.html.twig" %}

{% block body %}

<div class="container">

  <div class="row">
    <h1>Tous les articles :</h1>


    {% for article in articles %} 
          <div class=" col-lg-12 col-md-6 col-sm-4 card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start mb-5">
              <h3 class="mb-0">
                <a class="text-dark" href="index.php?controller=article&methode=chaque&id={{article.id}}">{{article.title}}</a>
              </h3>
              <div class="mb-1 text-muted">{{article.content}}</div>
              <p class="card-text mb-auto">{{article.date}}</a>
              <div>
                {% if user.isAdmin %}
                  <a class="text-info" href="index.php?controller=article&methode=update&id={{article.id}}">modifier</a>
                  <a class="text-info" href="index.php?controller=article&methode=delete&id={{article.id}}">supprimer</a>
                {% endif %}
              </div>
            </div>
          </div>
        <br>
    {% endfor %}

</div>

</div>



{% endblock %}




