
{% extends "base.html.twig" %}

{% block body %}
<h1>Tous les articles :</h1>


    {% for article in articles %} 
        <div class="col-md-6">
          <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
              <h3 class="mb-0">
                <a class="text-dark" href="index.php?controller=article&methode=chaque&id={{article.id}}">{{article.title}}</a>
              </h3>
              <div class="mb-1 text-muted">{{article.content}}</div>
              <p class="card-text mb-auto">{{article.date}}</a>
            </div>
            <img class="card-img-right flex-auto d-none d-md-block" src="img/kierkegaard.png" alt="Card image cap">
          </div>
          {% if user.is_admin %}
          <a href="index.php?controller=article&methode=update&id={{article.id}}">modifier</a>
          <a href="index.php?controller=article&methode=delete&id={{article.id}}">supprimer</a>
          {% endif %}
            <img class="card-img-right flex-auto d-none d-md-block" src="../img/kierkegaard.png" alt="Card image cap">
          </div>
        </div>
    {% endfor %}

{% endblock %}




